- var here = 'homebrew'
- var uri = '/guides/homebrew/'
- var title = 'Homebrewing'
- var addcss = '/guides/guide.css'
- var addjs = ['/modules/constructor.js', '/guides/guide.js', uri + 'cards.js']

mixin body
  #pagecontent.p-3(style='flex:1')
    .w-100
      h3.text-center!= sd(t.title)
      a(href= lpath + uri) ‚Üê Go back to start
      #guide-window.card
        .card-body
          #pages-container
            #start
              h5#card-title!= sd(t.cards.start.title)
              p.card-text!= sd(t.cards.start.text)

          a#prevPageButton.btn.btn-primary.disabled(href="#start" onclick="prevPageButton.load()") Previous
          a#nextPageButton.btn.btn-primary.float-right(href="#" onclick="nextPageButton.load()") Next

          - var tPlain = JSON.stringify(t.cards)
          script
            | const lcode = '#{lcode}';
            | const c = !{tPlain};

include /modules/main.pug