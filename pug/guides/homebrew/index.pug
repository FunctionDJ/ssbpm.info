- var here = 'homebrew'
- var uri = '/guides/homebrew/'
- var title = 'Homebrewing'
- var addcss = '/guides/guide.css'
- var addjs = ['/modules/constructor.js', '/guides/guide.js', uri + 'cards.js']

mixin body
  #pagecontent.p-3(style='flex:1')
    .w-100
      h3.text-center!= sd(t.title)
      a(href= lpath + uri) ‚Üê Go back to start
      #guide-window.card
        .card-body
          #pages-container
            #start
              h5#card-title!= sd(t.cards.start.title)
              p.card-text!= sd(t.cards.start.text)
              label.radio-input(for="st-1")
                input(type="radio" id="st-1" value="bomb" name="#start")
                != sd(t.cards.start.choices.bomb)
              br
              label.radio-input(for="st-2")
                input(type="radio" id="st-2" value="sd-check" name="#start")
                != sd(t.cards.start.choices['sd-check'])
              br
              label.radio-input(for="st-3")
                input(type="radio" id="st-3" value="str2hax-1" name="#start")
                != sd(t.cards.start.choices["str2hax-1"])
              br

          a#prevPageButton.btn.btn-primary.disabled(href="#start" onclick="prevPageButton.load()") Previous
          a#nextPageButton.btn.btn-primary.float-right.disabled(href="" onclick="nextPageButton.load()") Next

          - var tPlain = JSON.stringify(t.cards)
          script
            | const lcode = '#{lcode}';
            | const c = !{tPlain};

include /modules/main.pug